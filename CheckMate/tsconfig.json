{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "@/*": ["./*"]
    },
    "skipLibCheck": true,
    "noImplicitAny": false 
  },
  "include": [
    "**/*.ts", 
    "**/*.tsx", 
    ".expo/types/**/*.ts", 
    "expo-env.d.ts"
  ]
}